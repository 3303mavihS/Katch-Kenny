<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="22dp">

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Left : 0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/yourScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score : 0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/highScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score : 0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START GAME!!!\n\nTry to catch as many as Kenny in 15s"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/kenny1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/kenny4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny10"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny11"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny12"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny13"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny14"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny15"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny16"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny17"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny18"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny19"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/kenny"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/kenny20"
            android:layout_width="0dp"
            android:layout_height="100dp"
